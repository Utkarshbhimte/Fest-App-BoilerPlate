// Import all partials
@require './_*.styl'
@import url('https://fonts.googleapis.com/css?family=Lato');
@require './remodal.css'
@require './remodal-default-theme.css'

html, body
  width 100%
  max-width 100%
  height 100%
  max-height 100%
  #main, div[data-reactroot]
    height 100%
    width 100%
  input
    height auto

.contain-all
  height 100vh
  overflow-x hidden
  background: linear-gradient(120deg, #89f7fe 0%, #66a6ff 100%);
  .message-wrap
    position relative
    min-height 80%
    .messages
      position absolute
      top: -85px

header
  padding 0 1em
  .tabs-wrap
    display flex
    justify-content center
    align-content center
    .tab
      padding .5em 1em
      transition all .3s ease-in
      height 3em
      min-width 20vw
      line-height: 2em;
      text-align center
      user-select none
      &.active
        background-color #212121
        color white

.card-wrap
  padding-top 2em
  .card
    border 2px solid #212121
    margin 1.5em auto
    width 90vw
    position relative
    display flex
    justify-content flex-start
    .basic
      background-color #212121
      color white
      width 30vw
      min-width 30vw
      padding 1em
      display flex
      flex-direction column
      justify-content space-between
      .day-wrap
        span
          text-align center
          width 100%
          display block
          font-weight 700
          letter-spacing 3px
        h3
          margin 0
      fav
        display block
        margin 0 auto
        width: 48.06px
        height 48.06px
        border-radius 50%
        border 1px solid #66a6ff
        transition all .3s ease-in-out
        &.active
          background linear-gradient(120deg, #89f7fe 0%, #66a6ff 100%);
          border 0
          transition all .3s ease-in-out
        &[aria-confirmed='true']
          border-radius 0
          height auto
          color: #66a6ff
          background #212121 !important
          border 2px solid #66a6ff
          &:before
            content 'conf'
            text-transform uppercase
            display inline-block
            padding .5em 1em

      .details
        span
          font-size 1.5em
          display block
    .main
      padding 1em
      position relative
      width 100%
      min-height 25vh
      h2
        margin 0 0 .3em 0
        font-size 2em
        text-align left
        text-transform uppercase
        letter-spacing 2px
        font-weight 700
      .s_time
        font-size 1.4em
      .more
        ul
          padding-left 1em
          li
            list-style none
            padding .5em
      .btn-wrap
        display flex
        justify-content flex-end
        flex-wrap wrap
        a
          display inline-block
          background-color #212121
          color white
          padding .6em 1em
          text-transform uppercase
          border none
          outline none
          font-size 1.5em
          margin-bottom .5em
          margin-right .5em
.modal-wrap
  .active
    background-color blue
  h3
    margin 0
    margin-bottom 1.5em
    text-transform uppercase
    letter-spacing 3px
    font-size 1.2em
  .part-2, .part-1
    padding 3em 2em
  .or
    display block
    width 3em
    height 3em
    font-size: 2em
    color #FFF
    border-radius 50%
    margin: -2em auto 0
    background-color #212121
    line-height: 3em
  h1
    border 3px solid #212121
    padding 1em .5em
  &.admin
    video
      width: 100%
      background-color #c3c3c3
      margin-bottom 1em
    form
      #code-submit
        display block
        padding .5em 1em
        border 1px solid #212121
        background-color white
        text-transform uppercase
        margin 1em 0 0 auto
        font-size 1.3em
        width 40%
      #code-input
        width: 100%
        display block
        outline none
        border 0
        border-bottom 1px solid #212121
        padding .5em 1em
        font-size 1.5em
        &::placeholder
          text-transform uppercase
.notification-wrapper
  form
    padding 3em 5vw 1em 5vw
    input[type='submit']
      background-color transparent
      margin-left 1em
      width: 6em;
      font-size: 1.5em;
      outline none
      border none
    input[type='text']
      width: calc(100% - 9em)
      border none
      outline none
      padding: 1em
      font-size: 1.3em
  .notification
    background-color #ffffff
    padding 1em 2em
    margin 2em auto
    h4
      margin 0.5em 0 1em 0
      text-align left
      font-size 1.5em
    span
      text-align right
      display block
      &.sender
        font-weight 700
