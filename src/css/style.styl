// Import all partials
@require './_*.styl'
@import url('https://fonts.googleapis.com/css?family=Lato');

html, body
  width 100%
  max-width 100%
  height 100%
  max-height 100%
  #main, div[data-reactroot]
    height 100%
    width 100%
  input
    height auto

.contain-all
  height 100vh
  overflow-x hidden
  .message-wrap
    background-color $cardBack
    position relative
    min-height 80%
    .messages
      position absolute
      top: -85px

header
  padding 0 1em
  .tabs-wrap
    display flex
    justify-content center
    align-content center
    .tab
      padding .5em 1em
      transition all .3s ease-in
      height 3em
      min-width 30vw
      line-height: 2em;
      text-align center
      user-select none
      &.active
        background-color #212121
        color white

.card-wrap
  padding-top 2em
  .card
    border 2px solid #212121
    margin 1em
    position relative
    display flex
    justify-content flex-start
    .basic
      background-color #212121
      color white
      width 30vw
      min-width 30vw
      padding 1em
      display flex
      flex-direction column
      justify-content space-between
      .day-wrap
        span
          text-align center
          width 100%
          display block
          font-weight 700
          letter-spacing 3px
        h3
          margin 0
      fav
        display block
        margin 0 auto
        width: 35px
        height 35px
        border-radius 50%
        border 1px solid white
        transition all .3s ease-in-out
        &.active
          background-color white
      .details
        span
          font-size 1.5em
          display block
    .main
      padding 1em
      h2
        margin 0 0 .3em 0
        font-size 2em
        text-align left
        text-transform uppercase
        letter-spacing 2px
        font-weight 700
    p
      font-size 1.4em